<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/landmarkImage"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/istanbul" />

    <TextView
        android:id="@+id/landmarkNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="İstanbul"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/landmarkImage"
        app:layout_constraintStart_toStartOf="@+id/landmarkImage"
        app:layout_constraintTop_toBottomOf="@+id/landmarkImage" />

    <TextView
        android:id="@+id/landmarkCountryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Türkiye"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/landmarkNameText"
        app:layout_constraintStart_toStartOf="@id/landmarkNameText"
        app:layout_constraintTop_toBottomOf="@id/landmarkNameText" />
</androidx.constraintlayout.widget.ConstraintLayout>